generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model users {
  user_id        String    @id @default(auto()) @map("_id") @db.ObjectId
  user_username  String    @unique
  user_password  String
  user_phone     String    @unique @default("000-000-0000")
  user_email     String    @unique
  user_create_at DateTime? @default(now()) @db.Date
  role           role      @relation(fields: [role_id], references: [role_id])
  role_id        String    @db.ObjectId
}

model role {
  role_id   String  @id @default(auto()) @map("_id") @db.ObjectId
  role_type String  @unique
  users     users[]
}
